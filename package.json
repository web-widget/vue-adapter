{
  "name": "@web-widget/vue-adapter",
  "version": "0.0.3",
  "description": "a web-widget plugin for vue.js applications",
  "source": "src/index.js",
  "main": "dist/cjs/vue-adapter.js",
  "module": "dist/esm/vue-adapter.js",
  "system": "dist/system/vue-adapter.js",
  "unpkg": "dist/umd/vue-adapter.js",
  "libraryName": "WebWidgetVueAdapter",

  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "import": "./dist/esm/vue-adapter.js",
      "require": "./dist/umd/vue-adapter.js"
    }
  },
  "scripts": {
    "prepublishOnly": "npm run build",
    "build": "rimraf dist && rollup -c",
    "build:watch": "rollup -cw",
    "test": "concurrently -n w: 'npm:test:*'",
    "test:jest": "cross-env BABEL_ENV=test jest test/*.test.js",
    "format": "prettier --write src",
    "check-format": "prettier --check src",
    "lint": "eslint src"
  },
  "jest": {
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run test"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/web-widget/vue-adapter.git"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "web-widget",
    "vue",
    "single",
    "page",
    "app",
    "spa"
  ],
  "author": "web-widget core team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/web-widget/vue-adapter/issues"
  },
  "homepage": "https://github.com/web-widget/vue-adapter#readme",
  "devDependencies": {
    "@babel/eslint-parser": "^7.16.0",
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^15.1.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@vue/test-utils": "^1.1.1",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.1",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-prettier": "^4.0.0",
    "prettier": "^2.4.1",
    "husky": "^4.3.0",
    "jest": "^26.6.1",
    "pretty-quick": "^3.1.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.32.1",
    "rollup-plugin-terser": "^7.0.2",
    "@web-widget/container": "^0.0.8",
    "vue": "^2.6.12",
    "vue-template-compiler": "^2.6.12"
  }
}
